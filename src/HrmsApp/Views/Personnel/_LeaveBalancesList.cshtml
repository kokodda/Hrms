@using HrmsModel.Models;
@model IEnumerable<EmployeeLeaveBalance>

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <label><small>Leave Balances</small></label>
        </div>
        <div class="panel-body">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><small>Leave Type</small></th>
                        <th><small>Entitlement</small></th>
                        <th><small>Balance</small></th>
                        <th><small>Carry Forward</small></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string balance = item.BalanceHours == 0 ? item.BalanceDays.ToString() : item.BalanceDays.ToString() + ".5";
                        <tr>
                            <td><small>@item.LeaveType.Name</small></td>
                            <td><small>@item.AnnualEntitlement</small></td>
                            <td><small>@balance</small></td>
                            <td><small>@item.CarryForward</small></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>