@using HrmsModel.Models;
@model Employee

@Html.Hidden("empUidHF", Model.EmpUid)
@Html.Hidden("empNameHF", Model.FirstName + " " + Model.FatherName + " " + Model.FamilyName)
@Html.Hidden("joinDateHF", Model.JoinDate.ToString("dd-MM-yyyy"))

<div class="container-fluid" style="padding:0px">
    <div id="personalDataSection">
        <div class="panel panel-default">
            <div class="panel-heading">
                <label><small>Personal Data</small></label>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2" style="border-bottom:solid thin;border-bottom-color:silver"><label><small>First</small></label></div>
                    <div class="col-sm-2" style="border-bottom:solid thin;border-bottom-color:silver"><label><small>Family</small></label></div>
                    <div class="col-sm-2" style="border-bottom:solid thin;border-bottom-color:silver"><label><small>Father</small></label></div>
                    <div class="col-sm-2" style="border-bottom:solid thin;border-bottom-color:silver"><label><small>Mother</small></label></div>
                </div>
                <div class="row">
                    <div class="col-sm-2"><small>Name</small></div>
                    <div class="col-sm-2"><label><small>@Model.FirstName</small></label></div>
                    <div class="col-sm-2"><label><small>@Model.FamilyName</small></label></div>
                    <div class="col-sm-2"><small>@Model.FatherName</small></div>
                    <div class="col-sm-2"><small>@Model.MotherName</small></div>
                </div>
                <div class="row">
                    <div class="col-sm-2"><small>Translation</small></div>
                    <div class="col-sm-2"><label><small>@Model.OthFirstName</small></label></div>
                    <div class="col-sm-2"><label><small>@Model.OthFamilyName</small></label></div>
                    <div class="col-sm-2"><small>@Model.OthFatherName</small></div>
                    <div class="col-sm-2"><small>@Model.OthMotherName</small></div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3"><small><label>Gender: </label>&nbsp;@string.Format("{0}", Model.IsMale ? "Male" : "Femele")</small></div>
                    <div class="col-sm-3"><small><label>Birth Date: </label>&nbsp;@Model.BirthDate.ToString("dd-MM-yyyy")</small></div>
                    <div class="col-sm-4"><small><label>Nationality: </label>&nbsp;@Model.Nationality.Name</small></div>
                </div>
                <div class="row">
                    <div class="col-sm-3"><small><label>Marital Status: </label>&nbsp;@Model.MaritalStatus</small></div>
                    <div class="col-sm-3"><small><label>Blood Group: </label>&nbsp;@Model.BloodGroup</small></div>
                    <div class="col-sm-4"><small><label>Military Service: </label>&nbsp;@string.Format("{0}", Model.IsMilitaryExempted ? "Exempted" : "Applicable")</small></div>
                </div>
                <div class="row">
                    <div class="col-sm-3"><small><label>Bank: </label>&nbsp;@ViewBag.bank</small></div>
                    <div class="col-sm-3"><small><label>Branch: </label>&nbsp;@Model.Branch</small></div>
                    <div class="col-sm-4"><small><label>IBAN: </label>&nbsp;@Model.IBAN</small></div>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.Brief))
        {
            <div style="padding-bottom:5px">
                <textarea asp-for="@Model.Brief" class="form-control fullwidth" rows="5" readonly style="border:none;font-size:12px;color:gray"></textarea>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.OthBrief))
        {
            <div>
                <textarea asp-for="@Model.OthBrief" class="form-control fullwidth" rows="5" readonly style="border:none;font-size:12px;color:gray"></textarea>
            </div>
        }
    </div>

    @*contacts*@
    <div class="panel panel-default" id="contactsSection">
        <div class="panel-heading">
            <label><small>Contacts</small></label>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-4">
                    <div><span class="fa fa-mobile-phone" style="font-size:24px"></span>&nbsp;&nbsp;&nbsp;<small>@Model.Phone</small></div>
                    <div><span class="glyphicon glyphicon-phone-alt"></span>&nbsp;&nbsp;<small>@Model.HomePhone1</small></div>
                    <div><span class="glyphicon glyphicon-phone-alt"></span>&nbsp;&nbsp;<small>@Model.HomePhone2</small></div>
                    <div><span class="glyphicon glyphicon-envelope"></span>&nbsp;&nbsp;<small>@Model.Email</small></div>
                </div>
                <div class="col-sm-8">
                    <div><small><label>Governorate:</label>&nbsp;@Model.Governorate.Name</small></div>
                    <div><small><label>Address:</label>&nbsp;@Model.Address</small></div>
                    <div><small><label>Permenant Address:</label>&nbsp;@Model.PermenantAddress</small></div>
                </div>
            </div>
        </div>
    </div>
</div>