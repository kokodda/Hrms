@using HrmsModel.Models;
@model Employee


<form role="form" id="popupForm" asp-controller="Personnel" asp-action="EditEmployee" data-ajax="true" data-ajax-method="POST" data-ajax-success="onSuccess">
    <br />
    <input type="hidden" asp-for="Id" />
    <div class="form-group-sm">
        <label class="control-label" asp-for="Brief"><small>Career Summary</small></label>
        <textarea asp-for="Brief" class="form-control fullwidth" style="height:150px"></textarea>
    </div>
    <div class="form-group-sm">
        <label class="control-label" asp-for="OthBrief"><small>Summary Translation</small></label>
        <textarea asp-for="OthBrief" class="form-control fullwidth" style="height:150px"></textarea>
    </div>
</form>