@using HrmsModel.Models
@model EmployeeLeave

<form role="form" id="popupForm" asp-controller="Personnel" asp-action="AddLeave" data-ajax="true" data-ajax-method="POST" data-ajax-update="#subListSection" data-ajax-success="onSuccess" data-ajax-failure="onFailure">
    <div class="form-group-sm">
        <label asp-for="SubmittedDate" class="control-label"><small>Submitted Date (*)</small></label>
        <input type="date" asp-for="SubmittedDate" class="form-control" />
    </div>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="EmployeeId" class="form-control" id="employeeId" />
    <div class="form-group-sm">
        <label asp-for="LeaveTypeId" class="control-label"><small>Leave Type (*)</small></label>
        <select asp-for="LeaveTypeId" class="form-control" required>
            @foreach(SelectListItem x in new SelectList(ViewBag.leaveTypesList, "Id", "Name"))
            {
                <option value="@x.Value">@x.Text</option>
            }
        </select>
    </div>
    <div class="form-group-sm">
        <label asp-for="FromDate" class="control-label"><small>From Date (*)</small></label>
        <input type="date" asp-for="FromDate" class="form-control" required />
    </div>
    <div class="form-group-sm">
        <label asp-for="ThruDate" class="control-label"><small>Thru Date (*)</small></label>
        <input type="date" asp-for="ThruDate" class="form-control" required />
    </div>
    <div class="form-group-sm">
        <label asp-for="Details" class="control-label"><small>Details</small></label>
        <input type="text" asp-for="Details" class="form-control" />
    </div>
    <hr />
    <div class="form-group-sm">
        <label asp-for="ActualFromDate" class="control-label"><small>Actual From Date</small></label>
        <input type="date" asp-for="ActualFromDate" class="form-control" />
    </div>
    <div class="form-group-sm">
        <label asp-for="ActualThruDate" class="control-label"><small>Actual Thru Date</small></label>
        <input type="date" asp-for="ActualThruDate" class="form-control" />
    </div>
    <div class="input-group-sm">
        <label class="control-label" asp-for="IsApproved">
            <input type="checkbox" asp-for="IsApproved" checked />
            <span><small>Is Approved? (*)</small></span>
        </label>
    </div>
</form>
