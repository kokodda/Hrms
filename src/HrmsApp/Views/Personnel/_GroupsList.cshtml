@using HrmsModel.Models;
@model IEnumerable<EmployeeGroup>

<div class="container-fluid" style="padding:0px">
    <label><small>Groups</small></label>
    <hr />
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th><small>Group</small></th>
                <th><small>Description</small></th>
                <th><small>Since</small></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><small>@item.GenericSubGroup.GenericGroup.Name &raquo; @item.GenericSubGroup.Name</small></td>
                    <td><small>@item.GenericSubGroup.Description</small></td>
                    <td><small>@item.JoinDate.ToString("dd-MM-yyyy")</small></td>
                </tr>
            }
        </tbody>
    </table>
</div>