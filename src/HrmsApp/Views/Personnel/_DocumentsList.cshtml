@using HrmsModel.Models;
@model IEnumerable<EmployeeDocument>

<div class="container-fluid" style="padding:0px">
    <label><small>Documents</small></label>
    <hr />
    <table class="table table-condensed">
        <thead>
            <tr>
                <th><small>Type</small></th>
                <th><small>Details</small></th>
                <th><small>Expiry Date</small></th>
                <th><small>Url</small></th>
                <th>
                    <a href="#" class="btn btn-xs" onclick="addToEmployee('Documents')" data-toggle="modal" data-target="#myModal" title="Add Document"><span class="glyphicon glyphicon-plus"></span></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string expiryDate = item.ExpiryDate.HasValue ? item.ExpiryDate.Value.ToString("dd-MM-yyyy") : null;
                <tr>
                    <td><small>@item.DocumentType.Name</small></td>
                    <td><small>@item.Details</small></td>
                    <td><small>@expiryDate</small></td>
                    <td><small>@item.Url</small></td>
                    <td>
                        <a href="#" class="btn btn-xs" onclick="editDocument(@item.Id)" title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="#" class="btn btn-xs" onclick="removeDocument(@item.Id)" title="Remove"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>