@using HrmsModel.Models;
@model EmployeeQualification

<form role="form" id="popupForm" asp-controller="Personnel" asp-action="AddQualification" data-ajax="true" data-ajax-method="POST" data-ajax-update="#listSection" data-ajax-success="onSuccess" data-ajax-failure="onFailure">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="EmployeeId" id="employeeId" />
    <div class="form-group-sm">
        <label asp-for="QualificationTypeId" class="control-label"><small>Qualification Type (*)</small></label>
        <select asp-for="QualificationTypeId" class="form-control" required>
            <option value="">Select from List ...</option>
            @foreach (SelectListItem x in new SelectList(ViewBag.qualificationTypesList, "Id", "Name"))
            {
                <option value="@x.Value">@x.Text</option>
            }
        </select>
    </div>
    <div class="form-group-sm">
        <label asp-for="Name" class="control-label"><small>Name</small></label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group-sm">
        <label asp-for="OthName" class="control-label"><small>Name Translated</small></label>
        <input type="text" asp-for="OthName" class="form-control" required />
    </div>
    <div class="form-group-sm">
        <label asp-for="CompetencyAreaTypeId" class="control-label"><small>Competency Area (*)</small></label>
        <select asp-for="CompetencyAreaTypeId" class="form-control" required>
            <option value="">Select from List ...</option>
            @foreach (SelectListItem x in new SelectList(ViewBag.competencyAreaTypesList, "Id", "Name"))
            {
                <option value="@x.Value">@x.Text</option>
            }
        </select>
    </div>
    <div class="form-group-sm">
        <label asp-for="CompetencySubCategoryId" class="control-label"><small>Competency (*)</small></label>
        <select asp-for="CompetencySubCategoryId" class="form-control" required>
            <option value="">Select from List ...</option>
            @foreach (SelectListItem x in new SelectList(ViewBag.competencySubCategoriesList, "Id", "Name"))
            {
                <option value="@x.Value">@x.Text</option>
            }
        </select>
    </div>
    <div class="input-group-sm">
        <label class="control-label" asp-for="IsPlanned">
            <input type="checkbox" asp-for="IsPlanned" />
            <span><small>Is Planned? (*)</small></span>
        </label>
    </div>
    <div class="form-group-sm">
        <label asp-for="ObtainedDate" class="control-label"><small>Obtained (Expected) Date</small></label>
        <input type="date" asp-for="ObtainedDate" class="form-control" required />
    </div>
</form>
