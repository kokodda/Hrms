@using HrmsModel.Models;
@model OrgUnit

<form role="form" id="popupForm" asp-controller="JobPositions" asp-action="Edit" data-ajax="true" data-ajax-method="POST" data-ajax-update="#listSection" data-ajax-success="onSuccess" data-ajax-failure="onFailure">
    <input type="hidden" asp-for="Id" />
    <div class="form-group-sm">
        <label class="control-label" asp-for="PositionName"><small>Position Name (*)</small></label>
        <input type="text" asp-for="PositionName" class="form-control" required />
    </div>
    <div class="form-group-sm">
        <label class="control-label" asp-for="OthPositionName"><small>Position Name Translated (*)</small></label>
        <input type="text" asp-for="OthPositionName" class="form-control" required />
    </div>
    <div class="form-group-sm">
        <label class="control-label" asp-for="Capacity"><small>Capacity (*)</small></label>
        <input type="number" asp-for="Capacity" class="form-control" required />
    </div>
    <div class="form-group-sm">
        <label class="control-label" asp-for="StandardTitleTypeId"><small>Standard Title</small></label>
        <select class="form-control" asp-for="StandardTitleTypeId">
            <option value="">Select from List ...</option>
            @foreach (SelectListItem item in new SelectList(ViewBag.standardTitleTypesList, "Id", "Name"))
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group-sm">
        <label class="control-label" asp-for="JobGradeId"><small>Job Grade</small></label>
        <select class="form-control" asp-for="JobGradeId">
            <option value="">Select from List ...</option>
            @foreach (SelectListItem item in new SelectList(ViewBag.jobGradesList, "Id", "Name"))
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group-sm">
        <label class="control-label" asp-for="JobCode"><small>Job Code</small></label>
        <input type="text" asp-for="JobCode" class="form-control" />
    </div>
</form>
