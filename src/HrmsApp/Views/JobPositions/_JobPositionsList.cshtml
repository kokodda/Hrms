@using HrmsModel.Models;
@model IEnumerable<OrgUnit>

<div class="container-fluid" style="padding:0px">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th><small>Position Name</small></th>
                <th><small>Unit</small></th>
                <th><small>Standard Title</small></th>
                <th><small>Job Code</small></th>
                <th><small>Job Grade</small></th>
                <th><small>Occupation</small></th>
                <th><small>Vacancy</small></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                string x1 = job.StandardTitleType == null ? null : job.StandardTitleType.Name;
                string x2 = job.JobGrade == null ? null : job.JobGrade.Name;
                <tr>
                    <td><small>@job.PositionName</small></td>
                    <td><small>@job.Name</small></td>
                    <td><small>@x1</small></td>
                    <td><small>@job.JobCode</small></td>
                    <td><small>@x2</small></td>
                    <td><small>@job.TotalStaff &nbsp; / &nbsp; @job.Capacity</small></td>
                    <td><small>@job.TotalVacant</small></td>
                    <td>
                        <a role="button" href="#" class="btn btn-xs" onclick="edit(@job.Id)" data-toggle="modal" data-target="#myModal" title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a role="button" href="#" class="btn btn-xs" onclick="details(@job.Id)" title="More"><span class="glyphicon glyphicon-option-horizontal"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>