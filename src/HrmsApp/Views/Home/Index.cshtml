@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h2>HRMS</h2>
</div>
<div class="row">
    <div class="col-sm-2">
        <div>
            <ul class="list-unstyled">
                <li><a href="~/Admin/Index">Admin</a></li>
                <li><a href="~/Organization/Index">Organization</a></li>
                <li><a href="~/Positions/Index">Job Center</a></li>
                <li><a href="~/Governance/Index">Governance Center</a></li>
                <li><a href="~/Personnel/Index">Personnel</a></li>
                <li><a href="~/Groups/Index">Staff Groups</a></li>
                <li><a href="~/Recruitment/Index">Recruitment</a></li>
                <li><a href="~/Calendars/Index">Calendars</a></li>
                <li><a href="~/Statistics/HeadCount">Head Count</a></li>
            </ul>
        </div>
    </div>
    <div class="col-sm-7"></div>
    <div class="col-sm-3">
        <div id="holidaysSection"></div>
        <div id="leaveSection"></div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).on('ready', function () {
            $.ajax({
                url: '@Url.Action("HolidaysList", "Home")',
                type: 'GET',
                success: function (result) {
                    $('#holidaysSection').html(result);
                }
            });
            $.ajax({
                url: '@Url.Action("LeaveList", "Home")',
                type: 'GET',
                success: function (result) {
                    $('#leaveSection').html(result);
                }
            });
        })
    </script>
}
