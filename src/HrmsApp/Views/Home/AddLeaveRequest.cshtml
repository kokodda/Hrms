@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isFirst = true;
}

<br />
<form role="form" asp-controller="Home" asp-action="AddLeaveRequest" data-ajax="true" data-ajax-method="POST" data-ajax-update="#formResult">
    <div class="form-group-sm">
        <label class="control-label" style="color:silver">Leave Request</label>
        <br />
        <div style="font-size:smaller">
            @foreach (SelectListItem item in new SelectList(ViewBag.leaveTypesList, "Id", "Name"))
            {
                if (isFirst)
                {
                    <input type="radio" class="radio-inline" name="leaveType" value="@item.Value" checked />  @item.Text
                    isFirst = false;
                }
                else
                {
                    <input type="radio" class="radio-inline" name="leaveType" value="@item.Value" />  @item.Text
                }
            }
        </div>
    </div>
    <hr />
    <div class="form-group-sm">
        <label class="control-label"><small>Request On Behalf</small></label>
        <input type="text" name="onBehalf" class="form-control" />
    </div>
    <div class="form-group-sm">
        <label class="control-label"><small>Balance</small></label>
        <input type="text" name="balance" class="form-control" value="10" disabled readonly />
    </div>
    <div class="form-group-sm">
        <label class="control-label"><small>From Date (*)</small></label>
        <input type="date" name="fromDate" class="form-control" />
    </div>
    <div class="form-group-sm">
        <label class="control-label"><small>Thru Date</small></label>
        <input type="date" name="thruDate" class="form-control" />
    </div>
    <div class="form-group-sm">
        <label class="control-label"><small>Additional Leave (Will be Deducted from Annual)</small></label>
        <input type="number" name="additionalDays" class="form-control" value="0" />
    </div>
    <div class="form-group-sm">
        <label class="control-label"><small>Substitue</small></label>
        <input type="text" name="substitute" class="form-control" />
    </div>
    <div class="form-group-sm">
        <label class="control-label"><small>Address During Leave (*)</small></label>
        <input type="text" name="address" class="form-control" />
    </div>
    <div class="form-group-sm">
        <label class="control-label"><small>Emergency Contacts (*)</small></label>
        <input type="text" name="contacts" class="form-control" />
    </div>
    <br />
    <div><label style="color:silver"><small>Approvals</small></label></div>
    <div class="form-group-sm">
        <div class="input-group col-sm-3">
            <input type="text" class="form-control" placeholder="Upper1" />
            <span class="input-group-addon">
                <input type="radio" name="upper1Approval" /><small>Approve</small>
            </span>
            <span class="input-group-addon">
                <input type="radio" name="upper1Approval" /><small>Reject</small>
            </span>
        </div>
    </div>
    <div class="form-group-sm">
        <div class="input-group col-sm-3">
            <input type="text" class="form-control" placeholder="Upper2" />
            <span class="input-group-addon">
                <input type="radio" name="upper2Approval" /><small>Approve</small>
            </span>
            <span class="input-group-addon">
                <input type="radio" name="upper2Approval" /><small>Reject</small>
            </span>
        </div>
    </div>
    <hr />
    <label class="control-label" style="color:silver"><small>HR Section</small></label>
    <div class="form-group-sm">
        <input type="text" class="form-control" placeholder="Endorsement" />
    </div>
    <div class="form-group-sm">
        <div class="input-group col-sm-3">
            <span class="input-group-addon">
                <label><small>Actual From</small></label>
            </span>
            <input type="date" class="form-control" />
        </div>
    </div>
    <div class="form-group-sm">
        <div class="input-group col-sm-3">
            <span class="input-group-addon">
                <label><small>Actual Thru</small></label>
            </span>
            <input type="date" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group-sm">
        <button type="submit" class="btn btn-sm btn-primary" tabindex="-1">Submit</button>
        <a role="button" href="/Home/Index" class="btn btn-sm btn-default" tabindex="-1">Cancel</a>&nbsp;
        <span id="formResult" style="font-style:italic;font-size:small"></span>
    </div>
</form>