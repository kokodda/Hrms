@using HrmsModel.Models;
@model EmployeeAttendance

<form role="form" id="popupForm" asp-controller="Attendance" asp-action="EditEmployeeAttendance" data-ajax="true" data-ajax-method="POST" data-ajax-update="#detailsSection" data-ajax-success="onSuccess" data-ajax-failure="onFailure">
    <input type="hidden" asp-for="Id" />
    <div class="form-group-sm">
        <label class="control-label" asp-for="AttendanceActionTypeId"><small>Corrective Action (*)</small></label>
        <select class="form-control" asp-for="AttendanceActionTypeId" required>
            <option value="">Select from List ...</option>
            @foreach (SelectListItem item in new SelectList(ViewBag.attendanceActionTypesList, "Id", "Name"))
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group-sm">
        <label class="control-label" asp-for="NbrDays"><small>Number of Days (*)</small></label>
        <input type="number" asp-for="NbrDays" class="form-control" required />
    </div>
</form>