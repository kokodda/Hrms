@using HrmsModel.Models;
@model IEnumerable<StandardTitleType>

<div class="container-fluid">
    <div style="color:silver">Standard Titles</div>
    <hr />
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th><span class="fa fa-sort-numeric-asc"></span></th>
                <th><small>Name</small></th>
                <th><small>Name Translated</small></th>
                <th><small>Is Active</small></th>
                <th>
                    <a href="#" class="btn btn-xs" onclick="addStandardTitleType()" data-toggle="modal" data-target="#myModal" title="Add"><span class="glyphicon glyphicon-plus"></span></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td><small>@item.SortOrder</small></td>
                    <td><small>@item.Name</small></td>
                    <td><small>@item.OthName</small></td>
                    <td><input type="checkbox" asp-for="@item.IsActive" disabled readonly /></td>
                    <td>
                        <a href="#" class="btn btn-xs" onclick="editStandardTitleType(@item.Id)" data-toggle="modal" data-target="#myModal" title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>