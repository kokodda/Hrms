@using HrmsModel.Models;
@model IEnumerable<GenericSubGroup>

<div class="container-fluid" style="padding:0px">
    <div style="color:silver">@ViewBag.pTitle</div>
    <hr />
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th><span class="glyphicon glyphicon-sort-by-order-alt"></span></th>
                <th><small>Name</small></th>
                <th><small>Description</small></th>
                <th><small>Is Active</small></th>
                <th>
                    <a role="button" href="#" class="btn btn-xs" onclick="addSubGroup(@ViewBag.groupId)" data-toggle="modal" data-target="#myModal" title="Add Sub Group"><span class="glyphicon glyphicon-plus"></span></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><small>@item.SortOrder</small></td>
                    <td><small>@item.Name</small></td>
                    <td><small>@item.Description</small></td>
                    <td><input type="checkbox" asp-for="@item.IsActive" disabled readonly /></td>
                    <td>
                        <a role="button" href="#" class="btn btn-xs" onclick="editSubGroup(@item.Id)" data-toggle="modal" data-target="#myModal" title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a role="button" href="#" class="btn btn-xs" onclick="membersList(@item.Id)" title="Members"><span class="glyphicon glyphicon-user"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>