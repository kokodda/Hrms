@{
    ViewData["Title"] = "Groups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="padding:0px">
    <br />
    <h3 style="color:silver">Employees Grouping</h3>
    <label>General Purpose Groups and Shifts</label>
    <hr />
    <div class="row">
        <div class="col-sm-2">
            <div id="groupsSection"></div>
            <hr />
            <div id="shiftsSection"></div>
        </div>
        <div class="col-sm-6" id="listSection"></div>
        <div class="col-sm-4" id="membersSection"></div>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    @{ await Html.RenderPartialAsync("_PopupForm"); }
    <script>
        $(document).on('ready', function () {
            groupsList();
            shiftsList();
        });

        function showPopup() {
            $('#popupResult').html(null).text(null);
            $('.popupBtns').removeAttr('disabled');
        }
        function onPopupSubmit() {
            $('#popupForm').submit();
        }
        function onSuccess() {
            $('#popupResult').html('Successfully Updated.');
            $('.popupBtns').attr('disabled', 'disabled');
        }
        function onFailure() {
            $('#formResult').html('Failed to Update! Please Correct All Errors.');
            $('.popupBtns').removeAttr('disabled');
        }

        //groups
        function groupsList() {
            $.ajax({
                url: '@Url.Action("GroupsList", "Groups")',
                type: 'GET',
                success: function (result) {
                    $('#groupsSection').html(result);
                }
            });
        }
        function addGroup() {
            $.ajax({
                url: '@Url.Action("AddGroup", "Groups")',
                type: 'GET',
                success: function (result) {
                    $('#myModal-body').html(result);
                    $('#myModal-label').html('Add Group');
                    showPopup();
                }
            });
        }

        //sub groups
        function subGroupsList(id) {
            $.ajax({
                url: '@Url.Action("SubGroupsList", "Groups")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $('#membersSection').html(null);
                    $('#listSection').html(result);
                }
            });
        }
        function addSubGroup(id) {
            $.ajax({
                url: '@Url.Action("AddSubGroup", "Groups")',
                type: 'GET',
                success: function (result) {
                    $('#myModal-body').html(result);
                    $('#myModal-label').html('Add Sub Group');
                    $('#groupId').val(id);
                    showPopup();
                }
            });
        }
        function editSubGroup(id) {
            $.ajax({
                url: '@Url.Action("EditSubGroup", "Groups")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $('#myModal-body').html(result);
                    $('#myModal-label').html('Edit Sub Group');
                    showPopup();
                }
            });
        }

        //members
        function membersList(id, sgName) {
            $.ajax({
                url: '@Url.Action("MembersList", "Groups")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $('#membersSection').html(result);
                }
            });
        }
        function addMember(id) {
            $.ajax({
                url: '@Url.Action("AddMember", "Groups")',
                type: 'GET',
                success: function (result) {
                    $('#myModal-body').html(result);
                    $('#myModal-label').html('Add Member');
                    $('#subGroupId').val(id);
                    showPopup();
                }
            });
        }
        function removeMember(id) {
            if (!confirm('Please Confirm! About to Remove Member from Group?')) {
                return;
            }
            var t = $('#mTitle').text();
            $.ajax({
                url: '@Url.Action("RemoveMember", "Groups")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $('#membersSection').html(result);
                }
            });
        }

        //shifts
        function shiftsList() {
            $.ajax({
                url: '@Url.Action("ShiftsList", "Groups")',
                type: 'GET',
                success: function (result) {
                    $('#shiftsSection').html(result);
                }
            });
        }
        function rotationsList(id, gName) {
            $.ajax({
                url: '@Url.Action("RotationsList", "Groups")',
                type: 'GET',
                data: { id: id, groupName: gName },
                success: function (result) {
                    $('#listSection').html(result);
                    $('#membersSection').html(null);
                }
            });
        }
        function addRotation() {
            $.ajax({
                url: '@Url.Action("AddRotation", "Groups")',
                type: 'GET',
                success: function (result) {
                    $('#myModal-body').html(result);
                    $('#myModal-label').html('Add Rotation');
                    showPopup();
                }
            });
        }
        function editRotation(id) {
            $.ajax({
                url: '@Url.Action("EditRotation", "Groups")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $('#myModal-body').html(result);
                    $('#myModal-label').html('Edit Rotation');
                    showPopup();
                }
            });
        }
        function removeRotation(id) {
            if (!confirm('Please Confirm! About to Permenantly Delete Rotations?')) {
                return;
            }
            $.ajax({
                url: '@Url.Action("RemoveRotation", "Groups")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $('#listSection').html(result);
                    if ($('#rotationsCountHF').val() === '0') {
                        alert($('#rotationsCountHF').val());
                        $('#listSection').html(null);
                        shiftsList();
                    }
                }
            });
        }
    </script>
}