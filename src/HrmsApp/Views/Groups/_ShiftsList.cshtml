@using HrmsModel.Models;
@model IEnumerable<ShiftRotation>

<div class="container-fluid" style="padding:0px">
    <div>
        <a role="button" href="#" class="btn btn-xs" onclick="addRotation()" data-toggle="modal" data-target="#myModal" title="Add Rotation"><span class="glyphicon glyphicon-plus"></span></a>&nbsp;
        <span><label><small>Shifts List</small></label></span>
    </div>
    <br />
    <ul>
        @foreach(var item in Model.Select(b => b.GenericSubGroup).Distinct())
        {
            <li><a href="#" onclick="rotationsList(@item.Id, '@item.Name')"><small>@item.Name</small></a></li>
        }
    </ul>
</div>