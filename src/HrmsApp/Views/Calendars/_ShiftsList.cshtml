@using  HrmsModel.Models
@model IEnumerable<Shift>

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <label><small>Attendance Shifts</small></label>
            <span class="pull-right"><a href="#" onclick="addShift(@ViewBag.calendarId)" data-toggle="modal" data-target="#myModal" title="Add Shift"><span class="fa fa-plus"></span></a></span>
        </div>
        <div class="panel-body">
            <table class="table table-hover table-condensed" style="font-size:smaller">
                <thead>
                    <tr>
                        <th>Sequence</th>
                        <th>Name</th>
                        <th>Interval</th>
                        <th>Start Time</th>
                        <th>Thru Time</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SortOrder</td>
                            <td>@item.Name</td>
                            <td>@item.ShiftTypeCode</td>
                            <td>@string.Format("{0}", item.FromTime.HasValue ? item.FromTime.Value.ToString("HH:mm") : null)</td>
                            <td>@string.Format("{0}", item.ThruTime.HasValue ? item.ThruTime.Value.ToString("HH:mm") : null)</td>
                            <td>
                                <a href="#" class="btn btn-xs pull-right" onclick="removeShift(@item.Id)" title="Delete"><span class="fa fa-remove"></span></a>
                                <a href="#" class="btn btn-xs pull-right" onclick="editShift(@item.Id)" data-toggle="modal" data-target="#myModal" title="Edit"><span class="fa fa-pencil"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
